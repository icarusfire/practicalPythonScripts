private static String locateResource(String resourceName, String primaryDirectory) {
    // 1. Check the hardcoded (primary) directory first
    File primaryFile = new File(primaryDirectory, resourceName);
    if (primaryFile.exists()) {
        return primaryFile.getAbsolutePath();
    }

    // 2. If not found there, try loading from the classpath
    URL resourceUrl = ResourceLoader.class.getClassLoader().getResource(resourceName);
    if (resourceUrl != null) {
        return resourceUrl.getFile();
    }

    // 3. If neither approach works, throw an error
    throw new IllegalArgumentException("Resource not found: " + resourceName);
}
