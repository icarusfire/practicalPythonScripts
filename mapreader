    @SuppressWarnings("unchecked")
    public static Map<String, Object> overridePlaceholderInPlace(
            Map<String, Object> map1, Map<String, Object> map2) {

        for (Map.Entry<String, Object> entry : map2.entrySet()) {
            String key = entry.getKey();
            Object value2 = entry.getValue();
            Object value1 = map1.get(key);

            if (value1 instanceof Map && value2 instanceof Map) {
                // Recursive call for nested maps
                overridePlaceholderInPlace(
                        (Map<String, Object>) value1,
                        (Map<String, Object>) value2
                );
            } else if (PLACEHOLDER_MAP.containsKey(key) && PLACEHOLDER_MAP.get(key).equals(value1)) {
                // Override placeholder in map1 with value from map2
                map1.put(key, value2 != null ? value2 : value1);
            } else if (value1 == null && PLACEHOLDER_MAP.containsKey(key)) {
                // If map1 doesn't have the key but it's a placeholder, set it from map2
                map1.put(key, value2);
            }
            // If map1 has a non-placeholder value, retain it (no action needed)
            // If map2 has additional keys not in PLACEHOLDER_MAP, ignore them
        }

        return map1;
    }
