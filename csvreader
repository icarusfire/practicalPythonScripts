    public static void updateTps(Map<String, Map<String, Object>> scenarios) {
        for (Map.Entry<String, Map<String, Object>> entry : scenarios.entrySet()) {
            Map<String, Object> scenario = entry.getValue();

            // Check if both "weight" and "tps" keys exist and are numbers.
            if (scenario.containsKey("weight") && scenario.get("weight") instanceof Number &&
                scenario.containsKey("tps") && scenario.get("tps") instanceof Number) {

                double weight = ((Number) scenario.get("weight")).doubleValue();
                int tps = ((Number) scenario.get("tps")).intValue();
                // Calculate new TPS and round up.
                int newTps = (int) Math.ceil(tps * weight);
                scenario.put("tps", newTps);
            }
        }
    }
